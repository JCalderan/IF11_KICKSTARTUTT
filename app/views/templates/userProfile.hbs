<div class="tabbable"> <!-- Only required for left/right tabs -->
  <ul class="nav nav-pills">
    <li class="active"><a href="#tab1" data-toggle="tab">Profil public</a></li>
    <li><a href="#tab2" data-toggle="tab">Paramètres</a></li>
  </ul>
<div class="tab-content">
  <div class="tab-pane active" id="tab1">
    <div class="row">
      <div class="span4">  
      <table class="table table-striped table-bordered">     
        <thead>
          <tr><th>Données personnelles</th></tr>
        </thead>      
        <tbody>
          <tr>
            <td>Nom</td>
            <td>
              <span id="user_nom" class="user_attr" style="cursor: pointer" data-field="firstname">{{#if firstname}} {{firstname}} {{else}} Nom d'utilisateur {{/if}}</span>
              <input type="text" id="user_nom_input" class="user_attr_input" style="display:none">
            </td>
          </tr>
          <tr>
            <td>Prénom</td>
            <td>
              <span id="user_prenom" class="user_attr" style="cursor: pointer" data-field="lastName">{{#if lastName}} {{lastName}} {{else}} Prénom d'utilisateur {{/if}}</span>
              <input type="text" id="user_prenom_input" class="user_attr_input" style="display:none">
            </td>
          </tr>
          <tr>
            <td>Type</td>
            <td>
              <span id="user_type" class="user_attr" style="cursor: pointer" data-field="type_member">{{#if type}} {{type_member}} {{else}} Choisir {{/if}}</span>
              <select id="user_type_select" name="type" class="user_attr_input" style="display:none">
                <option value="" selected="selected">Choisir</option>
                <option value="Etudiant">Etudiant</option>
                <option value="Doctorant">Doctorant</option>
                <option value="Enseignant">Enseignant</option>
                <option value="Exterieur">Extérieur</option>
              </select>
            </td>
          </tr>
          <tr>
            <td>Branche</td>
            <td>
              <span id="user_branche" class="user_attr" style="cursor: pointer" data-field="branche">{{#if branche}} {{branche}} {{else}} Choisir {{/if}}</span>
              <select id="user_branche_select" name="branche" class="user_attr_input" style="display:none">
                <option value="" selected="selected">Choisir</option>
                <option value="ISI">ISI</option>
                <option value="MTE">MTE</option>
                <option value="SM">SM</option>
                <option value="SI">SI</option>
                <option value="TC">TC</option>
              </select>
            </td>
          </tr>
          <tr>
            <td>Niveau</td>
            <td>
              <span id="user_niveau" class="user_attr" style="cursor: pointer" data-field="branche_lvl">{{#if branche_lvl}} {{branche_lvl}} {{else}} Choisir {{/if}}</span>
              <select id="user_niveau_select" name="niveau" class="user_attr_input" style="display:none">
                <option value="" selected="selected">Choisir</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
              </select>
            </td>
          </tr>        
          <tr>
            <td>Email</td>
            <td>
              <span id="user_email" class="user_attr" style="cursor: pointer" data-field="email">{{#if email}} {{email}} {{else}} john.doe@somewhere.com {{/if}}</span>
              <input type="text" id="user_email_input" class="user_attr_input" style="display:none">
            </td>
          </tr>
          <tr>
            <td>Téléphone</td>
            <td>
              <span id="user_tel" class="user_attr" style="cursor: pointer" data-field="phone">{{#if phone}} {{phone}} {{else}} 00 XX XX XX XX {{/if}}</span>
              <input type="text" id="user_tel_input" class="user_attr_input" style="display:none">
            </td>
          </tr>
          
        </tbody>
      </table>  
      </div>
      <div class="span3">
        <a class="thumbnail" href="#" ><img id="project_thumbnail" alt="ALT NAME" src={{#if user.thumbnail}} {{user.thumbnail}} {{else}}"http://placehold.it/250x250"{{/if}}></a>
      </div>  
      </div>
      <div class="row-fluid">
        <div class="span12 text-center">
          {{#if name}}
            <a href="#" class="btn btn-info btn-large" id="validateUser">Valider les Changements</a>
          {{else}}
            <a href="#" class="btn btn-success btn-large" id="createUser">Créer votre profil</a>
          {{/if}}
        </div>
      </div>
    </div>
  <div class="tab-pane" id="tab2">
    <div class="row">
      <div class="span4"> 
      <table class="table table-striped table-bordered">     
        <tbody>
          <tr>
            <td>Identifiant</td>
            <td>
              <span id="user_identifiant" class="user_attr" style="cursor: pointer" data-field="name">{{#if name}} {{name}} {{else}} Identifiant utilisateur {{/if}}</span>
              <input type="text" id="user_identifiant_input" class="user_attr_input" style="display:none">
            </td>
          </tr>
          <tr>
            <td>Mot de passe</td>
            <td>
              <span id="user_password" class="user_attr" style="cursor: pointer" data-field="password">****</span>
              <input type="password" id="user_password_input" class="user_attr_input" style="display:none">
            </td>
          </tr>    
        </tbody>
      </table>
      </div>
    </div>
</div>       
